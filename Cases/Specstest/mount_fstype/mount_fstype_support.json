{
        "Name": "Specstest-mount_fstype",
        "Summary": "test based opencontainers/specs",
        "Owner": "wangqilin2@huawei.com",
        "Description": "Test runc whether it can mount a filesystem",
        "Group": "Specstest/mount_fstype/",
        "License": "Apache 2.0",
        "Explains" "Test whether the container supports to mount a filesystem"
        "Requires": [
            {
                
	       "Class":"operationOS", 
	        "Type": "os",
	        "Distribution": "Ubuntu14.04",
	        "Resource": {
	            "CPU": 4,
	            "Memory": "16GB",
	            "Disk": "200G"
	        }
            }
            {
                
                "Class": "specstest",
                "Type": "container",
                "Version": "runc V0.2",
                "Files": [
		   "./source/config.json"
		]
                
            }
        ],
        "Deploys": [
            {
                "Object": "hostA",
                "Class": "OperationOS",
                "Cmd": "cd ./source/",
                "Cmd": "go build mount_fstype_host.go",
                "Cmd": "./mount_fstype_host",
                "Cmd": "./source/mount_fstype_runc.sh > /tmp/testtool/mount_fstype_host.txt",
                "Containers": [
                    {
                        "Object": "specs",
                        "Class": "specstest"
                    }
                ]
            }         
        ],
        "Collect": [
            {
                "Object": "hostA",
                "Files": ["/tmp/testtool/mount_fstype_host.txt"]
            }
        ]
}

